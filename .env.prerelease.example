# Copy to .env.prerelease before running prerelease stack.
# This template is strict by default and should fail fast when external keys are missing.

# Required auth
API_BEARER_TOKEN=REPLACE_ME_API_BEARER_TOKEN
ALLOW_UNAUTHENTICATED_API=false
ENABLE_DIAGNOSTICS=false
DIAGNOSTICS_TOKEN=REPLACE_ME_DIAGNOSTICS_TOKEN

# Strict external mode
STRICT_EXTERNAL_DATA=true
AMAP_API_KEY=REPLACE_ME_AMAP_API_KEY

# Optional LLM provider (recommended)
DASHSCOPE_API_KEY=
OPENAI_API_KEY=
LLM_API_KEY=
LLM_BASE_URL=
LLM_MODEL=

# Runtime mode
ROUTING_PROVIDER=auto
ENGINE_VERSION=v1
STRICT_REQUIRED_FIELDS=false
ENV_SOURCE=.env.prerelease

# Network / limits
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=false
GRAPH_TIMEOUT_SECONDS=120
RATE_LIMIT_MAX=60
RATE_LIMIT_WINDOW=60

# Domain defaults
DEFAULT_SPRING_FESTIVAL_DATE=2026-02-17
FOOD_MIN_PER_PERSON_PER_DAY=60

# Backends
REDIS_URL=redis://redis:6379/0
RATE_LIMIT_REDIS_URL=redis://redis:6379/0
ALLOW_INMEMORY_BACKEND=false

# Frontend runtime target (server-side proxy)
API_BASE_URL=http://backend:8000
