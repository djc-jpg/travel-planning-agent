# Copy to .env.prerelease before running docker compose.

# Required backend auth
API_BEARER_TOKEN=replace-with-long-random-token

# Keep diagnostics disabled in prerelease by default.
ENABLE_DIAGNOSTICS=false
# DIAGNOSTICS_TOKEN=replace-with-long-random-token

# Use strict mode to prevent silent fallback to mock external data.
STRICT_EXTERNAL_DATA=true
AMAP_API_KEY=replace-with-amap-key

# Optional LLM credentials (recommended)
# DASHSCOPE_API_KEY=replace-with-dashscope-key
# OPENAI_API_KEY=replace-with-openai-key

# Redis settings (defaults already point to compose redis service)
REDIS_URL=redis://redis:6379/0
RATE_LIMIT_REDIS_URL=redis://redis:6379/0
# Set true only for local/single-node runs without Redis.
ALLOW_INMEMORY_BACKEND=false

# Security / network
CORS_ORIGINS=http://localhost:3000
CORS_ALLOW_CREDENTIALS=false
GRAPH_TIMEOUT_SECONDS=120
RATE_LIMIT_MAX=60
RATE_LIMIT_WINDOW=60

# Frontend build/runtime API target
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_API_BEARER_TOKEN=replace-with-long-random-token
