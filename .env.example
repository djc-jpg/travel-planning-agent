# trip-agent local defaults
# Copy to .env for local/dev use.
# No API keys are required for startup; system runs in DEGRADED mode by default.

# External providers (optional)
AMAP_API_KEY=
DASHSCOPE_API_KEY=
OPENAI_API_KEY=
LLM_API_KEY=
LLM_BASE_URL=
LLM_MODEL=

# Runtime mode
STRICT_EXTERNAL_DATA=false
ROUTING_PROVIDER=auto
ENGINE_VERSION=v1
STRICT_REQUIRED_FIELDS=false
ENV_SOURCE=.env

# API / security
API_BEARER_TOKEN=
ALLOW_UNAUTHENTICATED_API=true
ENABLE_DIAGNOSTICS=false
DIAGNOSTICS_TOKEN=

# Network
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=false

# Timeouts and limits
GRAPH_TIMEOUT_SECONDS=120
RATE_LIMIT_MAX=60
RATE_LIMIT_WINDOW=60

# Domain defaults
DEFAULT_SPRING_FESTIVAL_DATE=2026-02-17
FOOD_MIN_PER_PERSON_PER_DAY=60

# Optional backends
REDIS_URL=
RATE_LIMIT_REDIS_URL=
ALLOW_INMEMORY_BACKEND=true

# Frontend runtime target (server-side proxy)
API_BASE_URL=http://localhost:8000
